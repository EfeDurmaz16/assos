      "type": "n8n-nodes-base.wait",
      "typeVersion": 1,
      "position": [
        240,
        500
      ]
    },
    {
      "parameters": {
        "url": "=http://api-gateway:8080/api/v1/videos/{{$node[\"Create Video Record\"].json[\"id\"]}}/process",
        "method": "POST",
        "authentication": "headerAuth",
        "options": {}
      },
      "name": "Trigger Video Processing",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        240,
        700
      ],
      "credentials": {
        "httpHeaderAuth": {
          "id": "assos-api-auth",
          "name": "ASSOS API Auth"
        }
      }
    }
  ],
  "connections": {
    "Start": {
      "main": [
        [
          {
            "node": "Create Video Record",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Create Video Record": {
      "main": [
        [
          {
            "node": "Wait for AI Script",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Wait for AI Script": {
      "main": [
        [
          {
            "node": "Trigger Video Processing",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": true,
  "settings": {},
  "id": "assos-video-pipeline"
