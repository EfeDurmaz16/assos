      "typeVersion": 1,
      "position": [
        240,
        100
      ]
    },
    {
      "parameters": {
        "url": "http://api-gateway:8080/api/v1/videos",
        "method": "POST",
        "authentication": "headerAuth",
        "sendBody": true,
        "body": "={{JSON.stringify({\"channel_id\": \"c7a7e5a1-8353-4b39-906b-735b8f413397\", \"title\": \"Automated Video via n8n\", \"metadata\": {\"source\": \"n8n_workflow\"}})}}",
        "options": {
          "body": {
            "contentType": "application/json"
          }
        }
      },
      "name": "Create Video Record",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        240,
        300
      ],
      "credentials": {
        "httpHeaderAuth": {
          "id": "assos-api-auth",
          "name": "ASSOS API Auth"
        }
      }
    },
    {
      "parameters": {
        "time": 1,
        "unit": "minutes"
      },
